@model MusicApp.Models.Cancione
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-purple">
            <div class="container-fluid">                
                <a class="navbar-brand" href="/"> <img class="mt-0 pt-0" src="~/img/Logo.png" alt="logo" width="40" height="40"/><span class="ms-2 TituloLogo">MusicApp.com</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class=" navbar-collapse justify-content-md-end collapse" id="navbarText">                                        
                    <ul class="navbar-nav">
                        <li class="nav-item ">                            
                            <a style="cursor:pointer" onclick="vaciar()"class="nav-link active button-add me-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                Agregar Cancion
                            </a>
                        </li>                                               
                    </ul>   
                    <form asp-action="Buscar" asp-controller="Home" method="post" class="d-flex navbar-text button-add">
                        <input name="text" class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                        <button class="btn btn-primary" type="submit">Buscar</button>
                    </form>                    
                </div>
            </div>
        </nav>
    </header>    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted bg-dark">
        <div class="container cont">
            <span class="copy">
                &copy 2022 | @@BarajasAngel
            </span>
        </div>
    </footer>        

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-black" id="exampleModalLabel">Agregar canción</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-black">
                    <div id="alert">   

                    </div>
                    <form id="frmAgregar" asp-action="Agregar" asp-controller="Home" method="post">
                        <div>
                            <label asp-for="Link"
                                   class="col-form-label col-form-label-lg"></label>
                            <input asp-for="Link" class="form-control form-control-lg" id="txtLink"/>
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Titulo"
                                   class="col-form-label col-form-label-lg"></label>
                            <input asp-for="Titulo" class="form-control form-control-lg" id="txtTitulo" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Grupo"
                                   class="col-form-label col-form-label-lg"></label>
                            <input asp-for="Grupo" class="form-control form-control-lg" id="txtGrupo"/>
                            <span asp-validation-for="Grupo" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Año"
                                   class="col-form-label col-form-label-lg"></label>
                            <input asp-for="Año" class="form-control form-control-lg" id="txtAño"/>
                            <span asp-validation-for="Año" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Genero"
                                   class="col-form-label col-form-label-lg"></label>
                            <input asp-for="Genero" class="form-control form-control-lg" id="txtGenero"/>
                            <span asp-validation-for="Genero" class="text-danger"></span>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" onclick="submitAgregar()" class="btn btn-primary">Agregar</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
